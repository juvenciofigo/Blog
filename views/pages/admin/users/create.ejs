<%- include ("../../../partials/head.ejs") %> <%- include ("../../../partials/headerlog.ejs") %>




<div class=" overflow-auto h-full bg-gradient-to-r from-indigo-500 to-blue-300 flex flex-col justify-center">
    
    <div class=" relative bg-white py-2 px-8 rounded-lg shadow-md md:w-full max-w-lg mx-auto">
        <div class="text-center w-max absolute bottom-10 error-message bg-red-400"></div>
        <h1 class="text-3xl font-semibold mb-6 text-center text-gray-800">Cadastro de Usuário</h1>
        <form action="/admin/users/save" method="post">
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-600 mb-1">Nome:</label>
                <input type="text" required autocomplete="name" id="name" name="name" class="texto" />
            </div>
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-600 mb-1">E-mail:</label>
                <input type="email" required autocomplete="email" id="email" name="email" class="texto" />
            </div>
            <div class="mb-6">
                <label for="password" class="block text-sm font-medium text-gray-600 mb-1">Senha:</label>
                <input type="password" required autocomplete="new-password"  id="password" name="password" class="texto" />
            </div>
            <div class="flex items-center justify-between space-x-4">
                <button type="submit" class="botaoSimples bg-blue-500 hover:bg-blue-600 outline-none focus-within:ring focus:ring-blue-200">Cadastrar</button>
                <a href="#" class="text-gray-500 text-sm">Já tem uma conta? Faça login</a>
            </div>
        </form>
    </div>
</div>
<%- include ("../../../partials/footer.ejs") %>
