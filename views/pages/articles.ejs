<%- include ("../partials/head.ejs") %> <%- include ("../partials/header.ejs") %>
<div class="flex flex-col justify-center items-center mx-auto w-full mt-3 text-center">
    <h1 class="text-2xl">Artigos</h1>
    <hr class="w-[calc(100%-15%)] mt-2 mb-4" />
    <div class="w-full md:px-4 mx-auto text-gray-600">
        <% result.article.rows.forEach(article => { %>
        <div class="w-full mx-auto max-w-[1200px] border py-2 shadow-md rounded-lg overflow-hidden">
            <h2 class="bg-slate-300 mb-2 text-xl leading-9"><%= article.title %></h2>

            <button class="botao whitespace-nowrap"><a class="whitespace-nowrap" href="/articles/<%= article.slug %>">Ler artigo</a></button>
        </div>
        <br />
        <% }) %>
    </div>
</div>
<%- include ("../partials/footer.ejs") %> 






















